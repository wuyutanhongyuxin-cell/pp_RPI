# =============================================================================
# RPI Bot v2.1 - 稳健配置 (支持双向交易)
# =============================================================================
# 复制此文件为 .env 并填入你的配置

# =============================================================================
# 账号配置 (二选一)
# =============================================================================

# 方式1: 单账号配置
PARADEX_L2_PRIVATE_KEY=0x你的L2私钥
PARADEX_L2_ADDRESS=0x你的L2地址

# 方式2: 多账号配置 (格式: 私钥1,地址1;私钥2,地址2;...)
# PARADEX_ACCOUNTS=0x私钥1,0x地址1;0x私钥2,0x地址2;0x私钥3,0x地址3

# 环境: prod (主网) 或 testnet (测试网)
PARADEX_ENVIRONMENT=prod

# =============================================================================
# 交易配置
# =============================================================================
MARKET=BTC-USD-PERP
TRADE_SIZE=0.001
TRADE_INTERVAL=3.0

# =============================================================================
# 核心风控 (固定值，建议不要修改)
# =============================================================================
MAX_SPREAD_PCT=0.012
STOP_LOSS_PCT=0.015
RISK_REWARD_RATIO=2.0
MAX_WAIT_SECONDS=15
CHECK_INTERVAL=0.3

# =============================================================================
# 入场策略 (简化版效果最好)
# =============================================================================
ENTRY_MODE=trend
TREND_FILTER=true
DIRECTION_SIGNAL_THRESHOLD=0.3
VOLATILITY_FILTER=false
DYNAMIC_STOP_LOSS=false

# =============================================================================
# 平仓策略
# =============================================================================
# limit = 限价单平仓 (赚取点差)
# market = 市价单平仓 (支付点差)
EXIT_ORDER_TYPE=limit

# =============================================================================
# 时段过滤 (建议开启)
# =============================================================================
TIME_FILTER=true
OPTIMAL_HOURS_START=8
OPTIMAL_HOURS_END=21
WEEKEND_MULTIPLIER=0.5

# =============================================================================
# Kelly仓位管理 (建议开启)
# =============================================================================
KELLY_ENABLED=true
KELLY_FRACTION=0.25
MAX_POSITION_PCT=0.20

# =============================================================================
# 回撤控制 (建议开启)
# =============================================================================
DRAWDOWN_CONTROL=true
MAX_DAILY_LOSS_PCT=0.03
MAX_TOTAL_LOSS_PCT=0.10

# =============================================================================
# 尾随止盈 (建议开启)
# =============================================================================
TRAILING_STOP=true
TRAILING_TRIGGER_RR=1.0
TRAILING_DISTANCE_PCT=0.5

# =============================================================================
# 其他配置
# =============================================================================
CLIENT_ID_FORMAT=timestamp
