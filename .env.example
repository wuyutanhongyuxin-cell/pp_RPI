# =============================================================================
# RPI Bot v3.0 - 深度优化配置
# =============================================================================
# 基于交易数据分析优化
# 核心改变: 从趋势跟随 -> 均值回归, 从高频低胜率 -> 中频高胜率
#
# 问题诊断:
# - 原胜率: 22% (需 >35% 才能盈利)
# - 原盈亏比: 0.95 (在低胜率下不足以覆盖亏损)
# - 做多胜率仅13.9% (追涨入场效果极差)
# - TAKER订单胜率19.3% (信号质量差)
# =============================================================================

# =============================================================================
# 账号配置
# =============================================================================
PARADEX_L2_PRIVATE_KEY=0x你的L2私钥
PARADEX_L2_ADDRESS=0x你的L2地址
PARADEX_ENVIRONMENT=prod

# =============================================================================
# 核心交易参数
# =============================================================================
MARKET=BTC-USD-PERP

# 交易大小: 保持0.001 BTC (Kelly会动态调整)
TRADE_SIZE=0.001

# 交易间隔: 增加到10秒 (减少无效交易)
TRADE_INTERVAL=10.0

# =============================================================================
# 关键风控参数 (大幅修改)
# =============================================================================

# Spread限制: 收紧到0.8%
# 原因: 只在流动性极好时交易，spread低时信号更可靠
MAX_SPREAD_PCT=0.008

# 止损: 放宽到5%
# 原因: 避免被短期噪音止损，给价格回归时间
STOP_LOSS_PCT=0.05

# 风险收益比: 设为0.8
# 原因: 配合提高胜率，小止盈快速落袋
RISK_REWARD_RATIO=0.8

# 最小利润: 降低到0.3%，配合紧spread
MIN_PROFIT_PCT=0.003

# 等待时间: 延长到45秒
# 原因: 给价格更多时间回归，不要急于止损
MAX_WAIT_SECONDS=45.0
CHECK_INTERVAL=0.5

# =============================================================================
# 入场策略 (核心修改)
# =============================================================================

# 入场模式: 改为均值回归!
# 原因: 趋势跟随在高频场景下追涨杀跌，做多胜率仅13.9%
#       均值回归在强压力后反向入场，吃短期回调
ENTRY_MODE=mean_reversion

# 趋势过滤: 关闭 (均值回归不需要趋势确认)
TREND_FILTER=false

# 方向信号阈值: 大幅提高到0.5
# 原因: 只在强不平衡时入场，提高信号质量
DIRECTION_SIGNAL_THRESHOLD=0.50

# 订单簿阈值: 配合方向信号
ORDERBOOK_THRESHOLD=0.3

# 波动率过滤: 开启
# 在极端波动时避免入场
VOLATILITY_FILTER=true
MAX_VOLATILITY_PCT=0.15
VOLATILITY_WINDOW=15

# 动态止损: 关闭 (使用自适应止损)
DYNAMIC_STOP_LOSS=false

# =============================================================================
# v3 量化信号增强 (优化)
# =============================================================================

QUANT_SIGNALS=true

# RSI: 使用更极端的阈值
# 原因: 只在极端超买超卖时作为参考，避免普通波动干扰
RSI_ENABLED=true
RSI_PERIOD=14
RSI_OVERSOLD=20
RSI_OVERBOUGHT=80

# VWAP: 保持开启
VWAP_ENABLED=true

# 订单流: 关闭!
# 原因: OFI与imbalance高度相关，本质是重复信号
#       关闭后减少虚假一致性
ORDER_FLOW_ENABLED=false

# 最小信号强度: 提高到0.55
# 原因: 过滤弱信号，减少无效入场
MIN_SIGNAL_STRENGTH=0.55

# 信号一致性权重: 降低到0.6
SIGNAL_CONSISTENCY_WEIGHT=0.6

# =============================================================================
# v3 自适应止损 (优化)
# =============================================================================

ADAPTIVE_STOP_LOSS=true

# 基础止损: 提高到4%
# 原因: 给价格足够的回归空间
ADAPTIVE_STOP_BASE=0.04

# 波动率乘数: 降低到1.0
# 原因: 避免在高波动时止损过宽
ADAPTIVE_STOP_VOLATILITY_MULT=1.0

# =============================================================================
# 连续亏损控制 (更严格)
# =============================================================================

# 最大连续亏损: 降低到3次
# 原因: 更快进入冷却，避免连续亏损
MAX_CONSECUTIVE_LOSSES=3

# 冷却时间: 延长到10分钟
# 原因: 给市场足够时间恢复
COOLDOWN_SECONDS=600

# 恢复条件: 更严格
# 只在spread极低且有明确方向时恢复
COOLDOWN_RECOVERY_SPREAD=0.006
COOLDOWN_RECOVERY_IMBALANCE=0.50

# =============================================================================
# 平仓策略
# =============================================================================

# 使用限价单平仓
# 原因: 数据显示MAKER订单胜率60%，远高于TAKER的19%
EXIT_ORDER_TYPE=limit

# =============================================================================
# 时段过滤
# =============================================================================

TIME_FILTER=true
# 缩小交易时段到最活跃时间
OPTIMAL_HOURS_START=12
OPTIMAL_HOURS_END=18
WEEKEND_MULTIPLIER=0.3

# =============================================================================
# Kelly仓位管理
# =============================================================================

KELLY_ENABLED=true
# Kelly分数: 降低到0.1
# 原因: 在胜率不稳定时更保守
KELLY_FRACTION=0.10
MAX_POSITION_PCT=0.08

# =============================================================================
# 回撤控制 (更严格)
# =============================================================================

DRAWDOWN_CONTROL=true
# 日内回撤: 降低到1%
MAX_DAILY_LOSS_PCT=0.01
# 总回撤: 降低到3%
MAX_TOTAL_LOSS_PCT=0.03

# =============================================================================
# 尾随止盈 (调整)
# =============================================================================

TRAILING_STOP=true
# 更早触发尾随: 0.5R
TRAILING_TRIGGER_RR=0.5
# 更紧的尾随距离: 0.3R
TRAILING_DISTANCE_PCT=0.3

# =============================================================================
# 其他
# =============================================================================
CLIENT_ID_FORMAT=timestamp

# =============================================================================
# 预期效果:
# - 交易频率: 降低约50% (更严格过滤)
# - 胜率: 从22%提升到40-50%
# - 盈亏比: 从0.95降到0.5-0.8 (但胜率提高弥补)
# - 期望值: 从-$0.008提升到+$0.002-0.005
#
# 注意: 首次使用建议先用小仓位测试2-3天
# =============================================================================
